-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "hack to ignore value", if @checked_hash == nil then  false else  @checked_hash.keys.include?(rating) end
  = submit_tag 'Refresh', :id => "ratings_submit"


%table#movies
  %thead
    %tr
      %th{:class => title_hilite}= link_to "Title", movies_path(:sort_by => :title, :ratings => @checked_hash), :id => "title_header"
      %th Rating
      %th{:class => release_hilite}= link_to "Release Date", movies_path(:sort_by => :release_date, :ratings => @checked_hash),      :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
